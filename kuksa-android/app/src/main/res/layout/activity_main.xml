<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />



    <ImageButton
        android:id="@+id/mycar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/fixcar_button"
        android:layout_marginStart="35dp"
        android:background="@drawable/roundcorner"
        app:srcCompat="@drawable/speedo" />

    <ImageButton
        android:id="@+id/cloud_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mycar_button"
        android:layout_marginBottom="85dp"
        android:background="@drawable/roundcorner"
        app:srcCompat="@drawable/cloud" />

    <ImageButton
        android:id="@+id/track_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cloud_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:background="@drawable/roundcorner"
        app:srcCompat="@drawable/track_icon" />

    <ImageButton
        android:id="@+id/fixcar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="74dp"
        android:background="@drawable/roundcorner"
        app:srcCompat="@drawable/fixcar" />


    <ImageButton
        android:id="@+id/appstore_button"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/kuksa_bg" />




</android.widget.RelativeLayout>